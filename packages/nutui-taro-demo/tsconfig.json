{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "@/packages": [
        "src/packages/*"
      ],
      "@/sites": [
        "src/sites/*"
      ],
      "@/locales": [
        "src/locales/*"
      ],
      "@/utils": [
        "src/utils/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["./src", "global.d.ts"],
  "compileOnSave": false
}
