{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base", "schedule:weekly", "group:allNonMajor"
  ],
  "labels": ["dependencies"],
  "ignorePaths": [
    "src/**",
    "packages/nutui-templates/**"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@tarojs"],
      "enabled": false
    }
  ],
  "ignoreDeps": [
    "node",
    "typescript"
  ]
}