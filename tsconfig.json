{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "ES6",
    "types": [
      "vite/client",
      "jest",
      "node"
    ],
    "allowJs": false,
    "declaration": true,
    "declarationDir": "./dist/esm/types",
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@nutui/nutui-react": [
        "src/packages/nutui.react.ts"
      ],
      "@nutui/nutui-react-taro": [
        "src/packages/nutui.react.taro.ts"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "./node_modules/**",
    "src/sites/**"
  ]
}
